@model IEnumerable<SoccerDiv.Models.Tournamnet>

@{
    ViewBag.Title = "Tournament";
}

<link href="~/Content/team.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />

<div class="containerX">
    <a class="card1" href="@Url.Action("AdminView", "Admins")">
        <h3>Back To Home</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
    <a class="card1" href="@Url.Action("AddTournament", "Tournamnets")">
        <h3>Add Tournament</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>


<div class="tableX">
    <table class="containerD" style="width:1140px;">
        <thead>
            <tr>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Tournament_Name)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Tournament_Description)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Tournament_Logo)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Sport.Sports_Name)
                    </h1>
                </th>
                <th style="width: 180px;">
                    <h1 style="color: #3BFD0B; font-family:cursive; font-size:20px;">
                        Controll
                    </h1>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tournament_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tournament_Description)
                    </td>
                    <td>
                        @if (item.Tournament_Logo != null)
                        {
                            var imgPath = item.Tournament_Logo;
                            <img src="@Url.Content(imgPath)" alt="profile card" style="width:50%; height:50%;">
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sport.Sports_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Tournament_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Tournament_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Tournament_ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
