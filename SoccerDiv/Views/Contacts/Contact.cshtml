@model SoccerDiv.Models.Contact

@{
    ViewBag.Title = "Contact";
}
<link href="~/Content/contact.css" rel="stylesheet" />

<div class="col-md-offset-1 col-md-10" style="margin-top:24px;">
    <div id="map-canvas" style="box-shadow: 0 30px 30px -20px rgba(0, 0, 0, 0.86);"></div>
</div>

@using (Html.BeginForm("Contact", "Contacts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="contact" id="contact">
        <div class="container">
            <div class="signup__container">

                <div class="container__child signup__form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>name</label>
                        @Html.EditorFor(model => model.C_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.C_Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.EditorFor(model => model.C_Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.C_Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        @Html.EditorFor(model => model.C_Message, new { htmlAttributes = new { @class = "form-control"} })
                        @Html.ValidationMessageFor(model => model.C_Message, "", new { @class = "text-danger" })
                    </div>
                    <div class="m-t-lg">
                        <ul class="list-inline text-center">
                            <li>
                                <input type="submit" value="Send" class="btn btn--form" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
