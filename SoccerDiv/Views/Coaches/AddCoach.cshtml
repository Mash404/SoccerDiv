@model SoccerDiv.Models.Coach

@{
    ViewBag.Title = "AddCoach";

    var success = ViewBag.Success;
    var failed = ViewBag.Failed;
}

<link href="~/Content/addteam.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />


<div class="containerX">
    <a class="card1" href="@Url.Action("AdminView", "Admins")">
        <h3>Back To Home</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
    <a class="card1" href="@Url.Action("CoachList", "Coaches")">
        <h3>Show All Coaches</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>


@using (Html.BeginForm("AddCoach", "Coaches", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="signup__container">

        <div class="container__child signup__form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Sports</label>
                @Html.DropDownList("Sports_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sports_ID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Team Name</label>
                @Html.DropDownList("Team_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Team_ID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Name</label>
                @Html.EditorFor(model => model.Coach_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mashfiq Rahman" } })
                @Html.ValidationMessageFor(model => model.Coach_Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Age</label>
                @Html.EditorFor(model => model.Coach_Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "30" } })
                @Html.ValidationMessageFor(model => model.Coach_Age, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Nationality</label>
                @Html.EditorFor(model => model.Coach_Nationality, new { htmlAttributes = new { @class = "form-control", @placeholder = "nationality" } })
                @Html.ValidationMessageFor(model => model.Coach_Nationality, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Coach Image</label>
                <input type="file" name="CoachImageFile" required />
            </div>
            <div class="m-t-lg">
                <ul class="list-inline text-center">
                    <li>
                        <input type="submit" value="Add Coach" class="btn btn--form" />
                    </li>
                    @if (success != null)
                    {
                        <li style="color:#85F12B;">
                            @success
                        </li>
                    }
                    else
                    {
                        <li style="color:#85F12B;">
                            @failed
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
