@model IEnumerable<SoccerDiv.Models.News>

@{
    ViewBag.Title = "News";
}

<link href="~/Content/news.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />

<div class="containerX" style="margin-top:50px;">
    <a class="card1" href="@Url.Action("PostNews", "News")">
        <h3>Post Your News</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>

<div class="container">
    <div class="row mt-5 mb-5">

        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-12 col-md-4 d-flex align-items-stretch mb-3">
                <div class="cardF">
                    <img class="card-imgF" src="@Url.Content(item.News_Image)">
                    <div class="card-contentF">
                        <label>@Html.DisplayFor(modelItem => item.News_Title)</label>
                        <h5>@Html.DisplayFor(modelItem => item.News_Date)</h5>
                        <time>@Html.DisplayFor(modelItem => item.NewsTime)</time>
                        <span class="glyphicon glyphicon-user"> @Html.DisplayFor(modelItem => item.Customer.Customer_Name)</span>
                        <p>
                            @Html.DisplayFor(modelItem => item.News_Dexcription)
                        </p>
                        <a href="@Url.Action("Details", "News",new { id = item.News_ID })" class="bttnF">Read Full Article</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>