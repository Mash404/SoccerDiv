@model IEnumerable<SoccerDiv.Models.News>

@{
    ViewBag.Title = "NewsList";
}
<link href="~/Content/team.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />

<div class="containerX">
    <a class="card1" href="@Url.Action("AdminView", "Admins")">
        <h3>Back To Home</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>

<div class="tableX">
    <table class="containerD" style="width:1140px;">
        <thead>
            <tr>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.News_Title)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.News_Date)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.NewsTime)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.News_Image)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.News_Dexcription)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Customer.Customer_Name)
                    </h1>
                </th>
                <th style="width: 180px;">
                    <h1 style="color: #3BFD0B; font-family:cursive; font-size:20px;">
                        Controll
                    </h1>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.News_Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.News_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsTime)
                    </td>
                    <td>
                        @if (item.News_Image != null)
                        {
                            var imgPath = item.News_Image;
                            <img src="@Url.Content(imgPath)" alt="profile card" style="width:50%; height:50%;">
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.News_Dexcription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Customer_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.News_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.News_ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>