@model IEnumerable<SoccerDiv.Models.Event>

@{
    ViewBag.Title = "EventList";
}

<link href="~/Content/team.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />

<div class="containerX">
    <a class="card1" href="@Url.Action("AdminView", "Admins")">
        <h3>Back To Home</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>

    <a class="card1" href="@Url.Action("AddEvents", "Events")">
        <h3>Add New Events</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>


<div class="tableX">
    <table class="containerD" style="width:1140px;">
        <thead>
            <tr>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Event_Date)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Event_Time)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Event_Details)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Team.Team_Name)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Team1.Team_Name)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Sport.Sports_Name)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Tournamnet.Tournament_Name)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Venue.Venue_Name)
                    </h1>
                </th>
                <th style="width: 180px;">
                    <h1 style="color: #3BFD0B; font-family:cursive; font-size:20px;">
                        Controll
                    </h1>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event_Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team.Team_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team1.Team_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sport.Sports_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tournamnet.Tournament_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venue.Venue_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Event_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Event_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Event_ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>