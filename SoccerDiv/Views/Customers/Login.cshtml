@model SoccerDiv.Models.TempCustomer
@{
    ViewBag.Title = "Login";
    var failed = ViewBag.Failed;
}
<link href="~/Content/login.css" rel="stylesheet" />
<h2>Login</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="signup__container">
        <div class="container__child signup__form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Name</label>
                @Html.EditorFor(TempCustomer => TempCustomer.Customer_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Abdullah Al Mohaimen" } })
                @Html.ValidationMessageFor(TempCustomer => TempCustomer.Customer_Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.EditorFor(TempCustomer => TempCustomer.Customer_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "abc@gmail.com" } })
                @Html.ValidationMessageFor(TempCustomer => TempCustomer.Customer_Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.EditorFor(TempCustomer => TempCustomer.Customer_Password, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "*******" })
                @Html.ValidationMessageFor(TempCustomer => TempCustomer.Customer_Password, "", new { @class = "text-danger" })
            </div>
            <div class="m-t-lg">
                <ul class="list-inline text-center">
                    <li>
                        <input type="submit" value="Sign In" class="btn btn--form" />
                    </li>
                </ul>
                <ul class="text-center">
                    <li>
                        Don't have an account! Please <a class="signup__link" href="@Url.Action("SignUp","Customers")">SignUp</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container__child signup__thumbnail">
            <div class="thumbnail__content text-center">
                <h1 class="heading--primary">Welcome to MaxSoccer</h1>
                @if (failed != null)
                {
                    <h2 style="color:#85F12B;">
                        @failed
                    </h2>
                }
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

