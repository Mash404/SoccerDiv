@model IEnumerable<SoccerDiv.Models.Player>

@{
    ViewBag.Title = "Ireland";
    var msg = ViewBag.Ireland;
}
<link href="~/Content/teamdetails.css" rel="stylesheet" />
<h2>Ireland</h2>

<div class="portfoliocard">
    <div class="coverphoto"></div>
    <div class="profile_picture">
        <img src="~/Content/cricket/ireland.png" alt="profile card" style="height:110px; width:110px;">
    </div>
    <div class="left_col">
        <div class="followers">
            <div class="follow_count" style="color: #0D2854">Ranking</div>
            <h2 style="color: #6F0095;">
                12
            </h2>
        </div>
        <div class="following">
            <div class="follow_count" style="color: #0D2854">Rating</div>
            <h2 style="color: #6F0095;">
                28
            </h2>
        </div>
    </div>
    <div class="right_col">
        <h2 class="name">Ireland</h2>
        <h3 class="location" style="margin-top:4px;">Cricket</h3>
        <div class="player_picture">
            @if (msg != null)
            {
                <h2>
                    @msg
                </h2>
            }
            else
            {
                foreach (var item in Model)
                {
                    <a href="@Url.Action("Details", "Players",new { id = item.Player_ID})">
                        <img src="@Url.Content(item.Player_Image)" alt="profile card" style="border-radius:100%; height:100px; width:100px; margin:4px; margin-top:4px;">
                    </a>
                }
            }

        </div>

    </div>
</div>
